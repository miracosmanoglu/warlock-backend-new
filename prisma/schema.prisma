// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  CUSTOMER
  WARLOCK
}

model Customer {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  username  String    @unique
  name      String
  surname   String
  phone     Int       @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Comment   Comment[]
  role      Role      @default(CUSTOMER)
  Dates     Dates[]
  credit    Int       @default(0)
  identity  String    @unique
}

model Warlock {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  name      String
  surname   String
  phone     Int      @unique
  password  String
  about     String?  @db.LongText
  rating    Int?
  tags      String?
  comments  String?
  status    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Gig       Gig[]
  role      Role     @default(WARLOCK)
  verified  Boolean  @default(false)
  image     String?  @db.LongText
  Dates     Dates[]
}

model Admin {
  id                   Int                    @id @default(autoincrement())
  email                String                 @unique
  password             String
  username             String                 @unique
  name                 String
  surname              String
  phone                Int                    @unique
  about                String                 @db.LongText
  image                String                 @db.LongText
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  Blog                 Blog[]
  HoroscopeDescription HoroscopeDescription[]
  role                 Role                   @default(ADMIN)

}

model Gig {
  id          Int       @id @default(autoincrement())
  description String    @db.LongText
  price       Int
  title       String
  duration    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  warlockId   Int
  warlock     Warlock   @relation(fields: [warlockId], references: [id])
  Comment     Comment[]
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id])
  Dates       Dates[]
}

model Dates {
  id          Int      @id @default(autoincrement())
  credit      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Warlock     Warlock  @relation(fields: [warlockId], references: [id])
  warlockId   Int
  Customer    Customer @relation(fields: [customerId], references: [id])
  customerId  Int
  Gig         Gig      @relation(fields: [gigId], references: [id])
  gigId       Int
  description String?
  verified    Boolean  @default(false)
}

model Comment {
  id         Int      @id @default(autoincrement())
  text       String   @db.LongText
  rate       Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  gigId      Int
  gig        Gig      @relation(fields: [gigId], references: [id])
  customerId Int
  customer   Customer @relation(fields: [customerId], references: [id])
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  description String   @db.VarChar(255)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Gig         Gig[]
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.LongText
  image       String   @db.LongText
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  adminId     Int
  admin       Admin    @relation(fields: [adminId], references: [id])
}

model HoroscopeDescription {
  id          Int       @id @default(autoincrement())
  title       String
  description String    @db.LongText
  image       String    @db.LongText
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  horoscopeId Int
  horoscope   Horoscope @relation(fields: [horoscopeId], references: [id])
  adminId     Int
  admin       Admin     @relation(fields: [adminId], references: [id])
}

model Horoscope {
  id                   Int                    @id @default(autoincrement())
  name                 String                 @unique
  image                String                 @db.LongText
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  HoroscopeDescription HoroscopeDescription[]
}

model ForgotTokens {
  id         Int      @id @default(autoincrement())
  email      String
  token      String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  expiration DateTime
  used       Boolean  @default(false)
}
